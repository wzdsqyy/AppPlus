<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wzdsqyy.bdj">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.wzdsqyy.weiman.ui.SplashActivity"
            android:theme="@style/Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wzdsqyy.weiman.ui.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.wzdsqyy.weiman.ui.comics.ComicsDetailActivity"
            android:label="@string/title_activity_comics_detail"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>